<h1>Add a Hug or High Five</h1>

<%= form_tag "/products" do %>
  <p>
    <%= label_tag :title, "Type of Hug" %>
    <%= text_field_tag :title, "", size: 80, placeholder: "Enter hug type here..." %>
  </p>
  <p>
    <%= label_tag :description, "Description" %>
    <%= text_field_tag :description, "Enter description here... ", size: 100 %>
  </p>
   <p>
    <%= label_tag :detail, "Hug detail" %>
    <%= text_area_tag :detail, "Enter detail here... ", size: "100x10" %>
  </p>
   <p>
    <%= label_tag :price, "Price" %>
    <%= text_field_tag :price, "Enter price here... ", size: 8 %>
  </p>
  <%= submit_tag "Submit" %>

<% end %>
